<!---
layout: main
view: page
permalink: /tag/{{tag}}.html
pagination:
  alias: tag
  data: collections.tags
--->
<bx:output>
	<h1 class="text-2xl font-semibold">Posts tagged as #prc.tag#</h1>
	<ul class="mt-4 space-y-2">
		<bx:loop array="#collections.byTag[slugify(prc.tag)]#" index="i">
			<li>
				<a href="#i.permalink#" class="post-link text-lg font-semibold hover:underline">#i.title#</a>
			</li>
		</bx:loop>
	</ul>
</bx:output>
